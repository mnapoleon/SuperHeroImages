<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.evan.napoleon.superheroimages.DCLetterActivity">

    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/dc_a_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="A"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_b_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="B"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_c_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="C"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_d_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="D"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_e_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="E"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_f_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="F"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_1"
        android:orientation="horizontal">

        <Button android:id="@+id/dc_g_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="G"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_h_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="H"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_i_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="I"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_j_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="J"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_k_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="K"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_l_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="L"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_2"
        android:orientation="horizontal">

        <Button android:id="@+id/dc_m_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="M"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_n_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="N"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_o_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="O"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_p_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="P"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_q_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Q"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_r_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="R"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_3"
        android:orientation="horizontal">

        <Button android:id="@+id/dc_s_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="S"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_t_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="T"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_u_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="U"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_v_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="V"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_w_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="W"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>

        <Button android:id="@+id/dc_x_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="X"
            android:textAllCaps="true"
            android:onClick="letterSelected"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_4"
        android:orientation="horizontal">

    <Button android:id="@+id/dc_y_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:text="Y"
        android:textAllCaps="true"
        android:onClick="letterSelected"/>

    <Button android:id="@+id/dc_z_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:text="Z"
        android:textAllCaps="true"
        android:onClick="letterSelected"/>

    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
